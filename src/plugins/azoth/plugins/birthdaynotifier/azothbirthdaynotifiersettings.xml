<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<page>
		<label value="Azoth BirthdayNotifier" />
		<groupbox>
			<label value="Behavior" />
			<item type="checkbox" property="NotifyEnabled" default="true">
				<label value="Notify about birthdays" />
			</item>
			<item type="lineedit" property="NotificationDays" default="0-3,7">
				<label value="Notify in these days:" />
			</item>
			<item type="spinbox" property="NotifyNTimesPerDay" default="2" minimum="1" maximum="24">
				<label value="Notify:" />
				<suffix value=" times per day" />
			</item>
		</groupbox>
	</page>
</settings>
